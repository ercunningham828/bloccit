<h1><%= @post.title %></h1>

<div class="col-md-4">
  <% unless @summary.present? %>
     <% if policy(Summary.new).create? %>
       <%= link_to "Create Summary", new_topic_post_summary_path(@topic,@post), class: 'btn btn-info' %>
     <% end %>
  <%else%>
    <div class="panel panel-info">
  <div class="panel-heading">Summary</div>
  <div class="panel-body">
    <p><%= @summary.body %></p>
     <% if policy(@summary).create? %>
    <%= link_to "Edit", edit_topic_post_summary_path(@topic,@post, @summary), class: 'btn btn-info' %>
     <%end%>
  </div>
</div>
    <%end%>
   </div>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body %></p>
  </div>
  <div class="col-md-4">
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post, @summary), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
<h1>New Summary</h1>
 
 <div class="row">
   <div class="col-md-4">
     <p>Guidelines for Summaries</p>
     <ul>
       <li>Type anything you want.</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for [@topic,@post,@summary] do |f| %>
       <div class="form-group">
         <%= f.label :body %>
         <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter summary" %>
       </div>
       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-info' %>
       </div>
     <% end %>
   </div>
 </div>